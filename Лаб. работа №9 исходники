задание 1
def factorial(n):
    if n == 0 or n == 1:
        return 1
    return n + factorial(n - 1)

print(factorial(5))  # 15 (1 + 2 + 3 + 4 + 5)

задание 2
def binary_search(arr, left, right, x):
    if right >= left:
        mid = left + (right - left) // 2
        if arr[mid] == x:
            return arr[mid]
        elif arr[mid] > x:
            return binary_search(arr, left, mid - 1, x)
        else:
            return binary_search(arr, mid + 1, right, x)
    else:
        # если не нашли — вернуть ближайшее значение
        if right < 0:
            return arr[0]
        elif left >= len(arr):
            return arr[-1]
        else:
            return arr[left] if abs(arr[left] - x) < abs(arr[right] - x) else arr[right]

arr = [1, 3, 5, 7, 9, 11]
x = 8
print(binary_search(arr, 0, len(arr) - 1, x))  

задание 3 
def quicksort(arr):
    if len(arr) <= 1:
        return arr
    pivot = arr[len(arr)//2]
    left = [x for x in arr if x > pivot]      # поменяли знак
    middle = [x for x in arr if x == pivot]
    right = [x for x in arr if x < pivot]     # поменяли знак
    return quicksort(left) + middle + quicksort(right)

print(quicksort([5, 2, 9, 1, 5, 6]))  

